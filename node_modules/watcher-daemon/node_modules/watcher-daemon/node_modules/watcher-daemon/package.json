{
  "name": "watcher-daemon",
  "version": "1.0.0",
  "private": true,
  "description": "LLM-powered file watcher daemon (prebuilt dist snapshot)",
  "main": "dist/index.js",
  "scripts": {
    "start": "node dist/index.js",
    "build": "tsc -p tsconfig.json",
    "typecheck": "tsc -p tsconfig.json --noEmit",
    "test": "node --check dist/index.js && node --check dist/rules/RuleEngine.js && node --check dist/rules/RuleStore.js && node --check dist/utils/security.js"
  },
  "dependencies": {
    "axios": "^1.7.9",
    "chokidar": "^3.6.0",
    "dotenv": "^16.4.7",
    "express": "^4.21.2",
    "fill-range": "^7.1.1",
    "follow-redirects": "^1.15.6",
    "form-data": "^4.0.4",
    "glob-parent": "~5.1.2",
    "is-binary-path": "~2.1.0",
    "is-glob": "~4.0.1",
    "node-notifier": "^10.0.1",
    "normalize-path": "~3.0.0",
    "proxy-from-env": "^1.1.0",
    "readdirp": "~3.6.0",
    "winston": "^3.17.0"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/node": "^22.10.5",
    "@types/node-notifier": "^8.0.5",
    "typescript": "^5.7.2"
  },
  "engines": {
    "node": ">=18"
  }
}
